{
  "emulators": {
    "dataconnect": {
      "host": "127.0.0.1",
      "port": 9599,
      "dataDir": "dataconnect/.dataconnect/pgliteData"
    },
    "ui": {
      "port": 4001
    },
    "hub": {
      "port": 4401
    },
    "logging": {
      "port": 4501
    },
    "functions": {
      "port": 5001
    },
    "singleProjectMode": true,
    "firestore": {
      "port": 8080
    },
    "database": {
      "port": 9000
    }
  },
  "dataconnect": {
    "source": "dataconnect"
  },
  "firestore": {
    "rules": "firestore.rules"
  },
  "functions": [
    {
      "source": "functions",
      "codebase": "default",
      "ignore": [
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log",
        "*.local"
      ]
      // predeploy lint removed for smooth deploy
    }
  ],
  "hosting": {
    "public": "dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}
